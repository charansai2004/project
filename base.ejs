<%- include('header') -%>

<div class="text-center center-div" id="login">
    <div class="container w-25 border py-5">
        <div class="title pb-5">
            <h2 class="font-weigth-bold">Login System</h2>
            <span>Log in for the existing user</span>
        </div>
        <form action='/route/login' method="POST" class="py-5">
            <div class="form-group">
                <input type="email" class="form-control" placeholder="Email" name="email" required>
                <small class="form-text text-muted text-left">Enter your registered email address</small>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="password" placeholder="Password" required>
            </div>
            <button type="submit" class="btn btn-success">Login</button>
            <!-- Signup button -->
            <a href="/signup" class="btn btn-primary">Signup</a>
        </form>
    </div>
</div>


    


